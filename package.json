{
  "name": "js-workflows",
  "version": "0.0.1",
  "description": "A simple state machine workflow implementation for JS",
  "main": "dist/index.ts",
  "types": "dist/types/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {

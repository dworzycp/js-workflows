  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@types/jest": "^29.5.3",
    "babel-jest": "^29.6.1",
    "esbuild": "^0.18.15",
    "jest": "^29.6.1",
    "typescript": "^5.1.6"
  }
}
